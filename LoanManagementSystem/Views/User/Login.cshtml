@model LoanManagementSystem.Models.sdtoUser

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutAnonymous.cshtml";
}
@using (Html.BeginForm("Login", "User", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

<div class="in-form">
    @Html.LabelFor(m => m.UserName)
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Enter email" })
                    @Html.ValidationMessageFor(m => m.UserName)
        @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Enter password" })
    
    <div class="check-sub">
        <input type="submit" value="Login">
        <p>@Html.ActionLink("Register as a new user", "Create")</p>
        <p style="color: maroon!important">@Html.ValidationSummary(true)</p>
    </div>
</div>
