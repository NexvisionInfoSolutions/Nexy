@model LoanManagementSystem.Models.sdtoUser

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutAnonymous.cshtml";
}
@using (Html.BeginForm("Login", "User", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <section id="loginForm" class="center-block">
        <div class="col-md-4">&nbsp;</div>
         <div class="col-md-5">
            <div class="form-group">
                <div class="col-md-10">
                    @Html.LabelFor(m => m.UserName)
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Enter email" })
                    @Html.ValidationMessageFor(m => m.UserName)
                </div>
            </div>
            <div class="form-group">

                <div class="col-md-10">
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Enter password" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-7">
                    @Html.ActionLink("Register as a new user", "Create")
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-default">Submit</button>
                </div>
            </div>
        </div>
        <div class="col-md-3"></div>
    </section>
}