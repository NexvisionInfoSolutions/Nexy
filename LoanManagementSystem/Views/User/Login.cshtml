@model LoanManagementSystem.Models.sdtoUser

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutAnonymous.cshtml";
}
@using (Html.BeginForm("Login", "User", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="in-form">
        <p style="color: maroon!important">@Html.ValidationSummary(true, "", new { @style = "color:red; font-style:italic" })</p>
        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Enter email" })
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Enter password" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(m => m.FinancialYearId)
                @Html.DropDownListFor(m => m.FinancialYearId, (SelectList)ViewBag.FinancialYears, new { @class = "form-control", @placeholder = "Select Financial Year" })
            </div>
        </div>
        <div class="check-sub">
            <input type="submit" value="Login">
            <p>@Html.ActionLink("Register as a new user", "Create")</p>            
        </div>
    </div>
